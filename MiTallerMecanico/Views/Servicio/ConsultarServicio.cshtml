@using UTIL.Models;
@{
    ViewBag.Title = "ConsultarServicio";

    List<ServicioModel> servicios = ViewBag.Servicios;
}

<h2>Consultar Servicios</h2>

<div class="panel panel-inverse width-full">
    <div class="panel-heading">
        <h4 class="panel-title">Listado de Servicios </h4>
        <div class="panel-heading-btn">
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
        </div>
    </div>
    <div class="table-responsive">
        <table id="dataTable" class="table" cellspacing="0">
            <thead>
                <tr>

                    <th width=100px>ID</th>

                    <th width=500px>Nombre</th>

                    <th width=300px>Valor</th>

                    <th width=100px>Editar</th>
                </tr>
            </thead>
            <tbody>
                @{
                    try
                    {
                        for (int i = 0; i < servicios.Count; i++)
                        {
                            <tr>

                                <td>@servicios[i].idServicio</td>

                                <td>@servicios[i].nombreServicio</td>

                                <td>@servicios[i].valorServicio</td>

                                <td>
                                    <input class="btn btn-primary btn-sm" type="button" name="btnEditarServicio" value="Editar">
                                </td>
                            </tr>
                        }
                    }
                    catch (Exception)
                    {
                        <tr>
                            <td></td>
                            <td>No existen Servicios</td>
                            <td></td>
                            <td></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>