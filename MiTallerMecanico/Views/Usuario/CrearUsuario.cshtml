@using UTIL.Models;
@{
    ViewBag.Title = "CrearUsuario";

    List<TipoUsuarioModel> tipoUsuarios = ViewBag.TipoUsuarios;
}

<h2>Crear Usuario</h2>

<!-- Panel Usuario -->
<div class="row">

    <div class="col-lg-12 ui-sortable">

        <div class="panel panel-inverse" data-sortable-id="form-plugins-1">

            <div class="panel-heading">
                <h4 class="panel-title">Datos Usuario</h4>
                <div class="panel-heading-btn">
                    <!--<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>-->
                    <!--<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-redo"></i></a>-->
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                    <!--<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>-->
                </div>
            </div>
            <div class="panel-body">
                <div class="table-responsive form-inline">
                    <table class="table table-profile">
                        <tbody>
                            <tr class="highlight">
                                <td>Tipo de Usuario</td>
                                <td>
                                    <select class="form-control" name="selTipoUsuario" id="selTipoUsuario">
                                        <option selected value="-1">-- Seleccionar</option>
                                        @{
                                            for (int i = 0; i < tipoUsuarios.Count; i++)
                                            {

                                                <option value="@tipoUsuarios[i].idTipoUsuario ">@tipoUsuarios[i].cargo </option>

                                            }
                                        }
                                    </select>
                                </td>
                                <td>Nombre</td>
                                <td>
                                    <input type="text" name="txtNomUsuario" id="txtNomUsuario" class="form-control" maxlength="30" tabindex="1" />
                                </td>
                                <td>Contraseña</td>
                                <td>
                                    <input type="text" name="txtPassUsuario" id="txtPassUsuario" class="form-control" maxlength="50" tabindex="2" />
                                </td>
                            </tr>
                            <tr class="highlight">
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr class="highlight">
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>
                                    <input class="btn btn-primary" type="button" name="btnCreaUsuario" value="Crear Usuario">
                                </td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>