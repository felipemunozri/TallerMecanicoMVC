@using UTIL.Models;
@{
    ViewBag.Title = "ConsultarProveedor";

    List<ProveedorModel> proveedores = ViewBag.Proveedores;
}

<h2>Consultar Proveedores</h2>

<div class="panel panel-inverse width-full">
    <div class="panel-heading">
        <h4 class="panel-title">Listado de Proveedores </h4>
        <div class="panel-heading-btn">
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
        </div>
    </div>
    <div class="table-responsive">
        <table id="dataTable" class="table" cellspacing="0">
            <thead>
                <tr>

                    <th width=100px>ID</th>

                    <th width=200px>Nombre</th>

                    <th width=300px>Dirección</th>

                    <th width=100px>Teléfono</th>

                    <th width=200px>Correo</th>

                    <th width=100px>Editar</th>
                </tr>
            </thead>
            <tbody>
                @{
                    try
                    {
                        for (int i = 0; i < proveedores.Count; i++)
                        {
                            <tr>

                                <td>@proveedores[i].idProveedor</td>

                                <td>@proveedores[i].nombreProveedor</td>

                                <td>@proveedores[i].direccionProveedor</td>

                                <td>@proveedores[i].telefonoProveedor</td>

                                <td>@proveedores[i].correoProveedor</td>

                                <td>
                                    <input class="btn btn-primary btn-sm" type="button" name="btnEditarProveedor" value="Editar">
                                </td>
                            </tr>
                        }
                    }
                    catch (Exception)
                    {
                        <tr>
                            <td></td>
                            <td></td>
                            <td>No existen Clientes</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>