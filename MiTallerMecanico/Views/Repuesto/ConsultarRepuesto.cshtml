@using UTIL.Models;
@{
    ViewBag.Title = "ConsultarRepuesto";

    List<RepuestoModel> repuestos = ViewBag.Repuestos;
}

<h2>Consultar Repuestos</h2>

<div class="panel panel-inverse width-full">
    <div class="panel-heading">
        <h4 class="panel-title">Listado de Repuestos </h4>
        <div class="panel-heading-btn">
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
        </div>
    </div>
    <div class="table-responsive">
        <table id="dataTable" class="table" cellspacing="0">
            <thead>
                <tr>

                    <th width=200px>ID</th>

                    <th width=700px>Nombre</th>

                    <th width=100px>Editar</th>
                </tr>
            </thead>
            <tbody>
                @{
                    try
                    {
                        for (int i = 0; i < repuestos.Count; i++)
                        {
                            <tr>

                                <td>@repuestos[i].idRepuesto</td>

                                <td>@repuestos[i].nombreRepuesto</td>

                                <td>
                                    <input class="btn btn-primary btn-sm" type="button" name="btnEditarRepuesto" value="Editar">
                                </td>
                            </tr>
                        }
                    }
                    catch (Exception)
                    {
                        <tr>
                            <td></td>
                            <td>No existen Repuestos</td>
                            <td></td>
                            <td></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>