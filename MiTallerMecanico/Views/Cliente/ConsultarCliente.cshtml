@using UTIL.Models;
@{
    ViewBag.Title = "ConsultarCliente";

    List<ClienteModel> clientes = ViewBag.Clientes;
}

<h2>Consultar Clientes</h2>

<div class="panel panel-inverse width-full">
    <div class="panel-heading">
        <h4 class="panel-title">Listado de Clientes </h4>
        <div class="panel-heading-btn">
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
        </div>
    </div>
    <div class="table-responsive">
        <table id="dataTable" class="table" cellspacing="0">
            <thead>
                <tr>

                    <th width=100px>Rut</th>

                    <th width=100px>Nombre</th>

                    <th width=100px>Apellido</th>

                    <th width=400px>Dirección</th>

                    <th width=100px>Telefono</th>

                    <th width=200px>Correo</th>

                    <th>Editar</th>
                </tr>
            </thead>
            <tbody>
                @{
                    try
                    {
                        for (int i = 0; i < clientes.Count; i++)
                        {
                            <tr>

                                <td>@clientes[i].rutCliente</td>

                                <td>@clientes[i].nombreCliente</td>

                                <td>@clientes[i].apellidoCliente</td>

                                <td>@clientes[i].direccionCliente</td>

                                <td>@clientes[i].telefonoCliente</td>

                                <td>@clientes[i].correoCliente</td>

                                <td>
                                    <input class="btn btn-primary btn-sm" type="button" name="btnEditarCliente" value="Editar">
                                </td>
                            </tr>
                        }
                    }
                    catch (Exception)
                    {
                        <tr>
                            <td></td>
                            <td></td>
                            <td>No existen Clientes</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>